// 圖片模型（一對多）
model ProductImage {
  id        String   @id @default(cuid())
  url       String
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Project {
  id                  String   @id @default(cuid())
  title               String
  description         String?
  status              ProjectStatus @default(PENDING)
  customerId          String
  customer            User     @relation(fields: [customerId], references: [id])
  deadline    DateTime?
  assignedEmployeeId  String?
  assignedEmployee    User?    @relation("AssignedEmployee", fields: [assignedEmployeeId], references: [id])
  quotes              Quote[]
  reports             Report[]
  createdAt           DateTime @default(now())
  isCompleted Boolean @default(false)  // 新增：是否完成
}

enum ProjectStatus {
  PENDING
  ASSIGNED
  COMPLETED
}

model Quote {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
  amount    Float
  details   String?
  createdAt DateTime @default(now())
}

model Conversation {
  id        String    @id @default(cuid())
  customerId String
  customer   User      @relation(fields: [customerId], references: [id])
  messages   Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  senderRole     Role
  content        String
  imageUrl       String?
  createdAt      DateTime     @default(now())

  // ▼▼▼ 請新增以下兩行 (對應 User.messages) ▼▼▼
  userId         String?
  user           User?         @relation(fields: [userId], references: [id])
  // ▲▲▲ 請新增以上兩行 ▲▲▲
  
  senderType     SenderType?   // 新增欄位
}

enum SenderType {
  USER
  SYSTEM
}

model Broadcast {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  videoUrl  String?   // ← 新增這一行
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  scheduledAt DateTime?  // ← 新增：排程發布時間（null 表示立即發布）
}

model Report {
  id        String     @id @default(cuid())
  type      ReportType
  title     String     // 新增標題欄位，便於管理
  content   String
  authorId  String
  author    User       @relation(fields: [authorId], references: [id])
  projectId String?
  project   Project?   @relation(fields: [projectId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum ReportType {
  SALES
  PRODUCT
  AMOUNT
  BROADCAST
  EMPLOYEE
}

model SalesActivity {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}


model Tag {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String?  // 可選：如 #FF0000，用來顯示標籤顏色
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customers   CustomerTag[] // 多對多關聯
}

model CustomerTag {
  customerId String
  tagId      String
  customer   User @relation(fields: [customerId], references: [id], onDelete: Cascade)
  tag        Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([customerId, tagId])
}

model PhoneOtp {
  id        String   @id @default(cuid())
  phone     String   @unique
  code      String   // 6 位數字
  userId    String?  // 若已有帳號則關聯，首次註冊可為 null
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  expiresAt DateTime
  attempts  Int      @default(0) // 防暴力破解
  createdAt DateTime @default(now())

  @@index([phone, expiresAt])
}