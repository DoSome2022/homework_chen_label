generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String?        @unique
  emailVerified  DateTime?
  image          String?
  password       String?        // hashed
  role           Role           @default(CUSTOMER)
  customerType   CustomerType?  @default(NORMAL)
  isSubscribed   Boolean        @default(false)

  accounts       Account[]
  sessions       Session[]
  projects       Project[]
  assignedProjects Project[]    @relation("AssignedEmployee")
  messages       Message[]      
  reports        Report[]
  conversations  Conversation[] 
  broadcasts     Broadcast[]    
  salesActivities SalesActivity[]

  // ── 新增這一行 ──
  customerContacts CustomerContact?   // 對應 CustomerContact.customer
  tags CustomerTag[] // 客戶擁有的標籤
  phoneOtps      PhoneOtp[]     // 一對多，可選（因為不是每個 User 都有 OTP 記錄）

  createdAt      DateTime       @default(now())
}

model CustomerContact {
  id           String   @id @default(cuid())
  customerId   String   @unique
  customer     User     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  name         String
  company      String?
  email        String?
  address      String?
  contactPerson String?
  phone        String?
  extraInfo    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  EMPLOYEE
  CUSTOMER
  SYSTEM     // ← 新增這一行
}

enum CustomerType {
  NORMAL
  POTENTIAL
}

model Product {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Float

  // 外鍵欄位（可選，支援關聯）
  categoryId  String?
  colorId     String?
  sizeId      String?

  // 關聯（可選，如果需要雙向查詢）
  // category    Category? @relation(fields: [categoryId], references: [id])
  // color       Color?    @relation(fields: [colorId], references: [id])
  // size        Size?     @relation(fields: [sizeId], references: [id])

  // 精選與封存（這兩個是您目前最需要的布林欄位）
  isFeatured  Boolean   @default(false)
  isArchived  Boolean   @default(false)

  // 圖片（支援多張，一對多 relation）
  images      ProductImage[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}


